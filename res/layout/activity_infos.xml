<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:gravity="center"
    android:orientation="vertical" 
    android:background="@drawable/arriere_plan_page_parametre" >


    <!-- afficher les infos -->

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/Margin_Bouton"
        android:layout_marginBottom="@dimen/Margin_Bouton"
        android:layout_marginLeft="@dimen/infos_leftRight"
            android:layout_marginRight="@dimen/infos_leftRight"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/textInfos"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>

   <!-- le bouton valider -->

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/Margin_Bouton"
        android:layout_marginBottom="@dimen/Margin_Bouton"
        android:gravity="center"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/fermerInfos"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/Margin_LeftRight"
            android:layout_marginRight="@dimen/Margin_LeftRight"
            android:text="@string/bouton_fermer" />
    </LinearLayout>

</LinearLayout>
